<?xml version="1.0"?>
<odoo>
    <data>
        <record id="user_id" model="ir.ui.view">
            <field name="name">user_form</field>
            <field name="model">mdm.user</field>
            <field name="arch" type="xml">
                <form string="User">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group></group>
                            <group>
                                <field name="dob"/>
                            </group>
                            <group>
                                <group>
                                    <field name="gender"/>
                                </group>
                                <group></group>
                            </group>
                            <group>
                                <field name="address"/>
                            </group>
                            <group>
                                <group>
                                    <field name="phone"/>
                                </group>
                            </group>
                            <group>
                                <field name="email"/>
                            </group>
                            <group>
                                <group>
                                    <field name="salary"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="users_id" model="ir.ui.view">
            <field name="name">user_tree</field>
            <field name="model">mdm.user</field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="dob"/>
                    <field name="gender"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="salary"/>
                </tree>
            </field>
        </record>

        <record id="users_action" model="ir.actions.act_window">
            <field name="name">Users.action</field>
            <field name="res_model">mdm.user</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="users_menu_id" name="users_menu" parent="motorcycle_dealer_manager_menu" action="users_action"/>

    </data>
</odoo>