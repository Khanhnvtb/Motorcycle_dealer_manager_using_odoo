<?xml version="1.0"?>
<odoo>
    <data>
        <record id="export_invoice_new_id" model="ir.ui.view">
            <field name="name">export_invoice_form</field>
            <field name="model">mdm.export.invoice</field>
            <field name="arch" type="xml">
                <form string="Export invoice">
                    <button name="add_export_receipt" type="object" string="Export receipts" class="btn-primary"/>
                    <group>
                        <group>
                            <field name="store_id" type="many2one" relation="mdm.store" string="Store"
                                   required="True">
                            </field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Export motor" name="export_motor">
                            <field name="export_invoice_ids">
                                <tree editable="bottom" string="Export">
                                    <field name="motor_id"/>
                                    <field name="quantity"/>
                                    <field name="sum_export_price" sum="total" readonly="True"/>
                                </tree>
                                <form string="export form">
                                    <group>
                                        <field name="motor_id"/>
                                        <field name="quantity"/>
                                        <field name="sum_export_price"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total" invisible="1"/>
                        <group>
                            <group>
                                <field name="debt_term"/>
                            </group>
                            <group>
                                <field name="payment"/>
                            </group>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="export_invoices_id" model="ir.ui.view">
            <field name="name">export_invoices_tree</field>
            <field name="model">mdm.export.invoice</field>
            <field name="arch" type="xml">
                <tree string="Export invoices">
                    <field name="time"/>
                    <field name="total"/>
                    <field name="payment"/>
                    <field name="debt_term"/>
                    <field name="user_id" string="User" widget="selection"
                           options="{'model': 'mdm.user', 'string': 'Name', 'on_change': 'on_change_user_id()'}"/>
                    <field name="store_id" string="Store" widget="selection"
                           options="{'model': 'mdm.store', 'string': 'Name', 'on_change': 'on_change_store_id()'}"/>
                </tree>
            </field>
        </record>

        <record id="export_invoices_action" model="ir.actions.act_window">
            <field name="name">Export_invoices.action</field>
            <field name="res_model">mdm.export.invoice</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="export_invoices_menu_id" name="export_invoices_menu" parent="motorcycle_dealer_manager_menu"
                  action="export_invoices_action"/>

    </data>
</odoo>